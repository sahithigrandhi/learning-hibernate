<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="edu.learningHibernate.dto.UserDetails" table="user_details">
		<meta attribute="class-description"> This class contains the user detail. </meta>
		<id name="user_Id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="userName" column="name" type="string" />
	</class>
</hibernate-mapping>